generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Employee {
  id        Int      @id @default(autoincrement())
  name      String
  joinDate  String
  position  String
  gender    Gender
  dob       String
  phone     String
  nrc       String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("employees")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  roleId    Int
  role      Role     @relation(fields: [roleId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Role {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String
  permissions Json     // Store permissions as JSON
  userCount   Int      @default(0)
  color       String   @default("blue")
  status      String   @default("Active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  users       User[]

  @@map("roles")
}

enum Gender {
  Male
  Female
}
